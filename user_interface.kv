<MainScreen>:
    slider_steps_txt2img : slider_steps_txt2img
    slider_cfg_txt2img : slider_cfg_txt2img
    slider_amount_txt2img : slider_amount_txt2img
    
    slider_steps_img2img : slider_steps_img2img
    slider_cfg_img2img : slider_cfg_img2img
    slider_denoise_img2img : slider_denoise_img2img
    slider_amount_img2img : slider_amount_img2img

    txt2img_generate : txt2img_generate
    img2img_generate : img2img_generate

    txt2img_prompt : txt2img_prompt
    txt2img_negative_prompt : txt2img_negative_prompt

    img2img_prompt : img2img_prompt
    img2img_negative_prompt : img2img_negative_prompt
    img2img_path : img2img_path

    MDScreen:
        MDTopAppBar:
            title: "Image Generation using AI"
            pos_hint: {"top": 1}

        
        MDBottomNavigation:
            MDBottomNavigationItem:
                size_hint_y: 0.88
                name: "screen 1"
                text: "Text to Image"
                icon: "text-box-plus"
            
                MDTextField:
                    id: txt2img_prompt
                    mode: "rectangle"
                    hint_text: "PROMPT"
                    helper_text: "Describe what you want"
                    size_hint_x: .40
                    pos_hint: {"center_x": .79, "center_y": .55}

                MDTextField:
                    id: txt2img_negative_prompt
                    mode: "rectangle"
                    hint_text: "NEGATIVE PROMPT"
                    helper_text: "Describe what you wouldn't want"
                    size_hint_x: .40
                    pos_hint: {"center_x": .79, "center_y": .45}
                
                MDLabel:
                    text: "STEPS"
                    halign: "center"
                    pos_hint: {"center_x": .67, "center_y": .35}

                MDSlider:
                    id: slider_steps_txt2img
                    hint: True
                    min: 1
                    max: 60
                    value: 25
                    size_hint_x: .30
                    size_hint_y: .05
                    pos_hint: {"center_x": .84, "center_y": .35}
                
                MDLabel:
                    text: "CFG"
                    halign: "center"
                    pos_hint: {"center_x": .67, "center_y": .25}

                MDSlider:
                    id: slider_cfg_txt2img
                    hint: True
                    min: 1
                    max: 30
                    value: 7
                    size_hint_x: .30
                    size_hint_y: .05
                    pos_hint: {"center_x": .84, "center_y": .25}

                MDLabel:
                    text: "AMOUNT"
                    halign: "center"
                    pos_hint: {"center_x": .67, "center_y": .15}
                MDSlider:
                    id: slider_amount_txt2img
                    hint: True
                    min: 1
                    max: 12
                    value: 4
                    size_hint_x: .30
                    size_hint_y: .05
                    pos_hint: {"center_x": .84, "center_y": .15}

                MDRaisedButton:
                    id: txt2img_generate
                    text: "GENERATE"
                    pos_hint: {"center_x": .5, "center_y": .05}   
                    size_hint_x: .35

            MDBottomNavigationItem:
                size_hint_y: 0.88
                name: "screen 2"
                text: "Image to Image"
                icon: "file-image-plus"

                MDTextField:
                    id: img2img_prompt
                    mode: "rectangle"
                    hint_text: "PROMPT"
                    helper_text: "Describe what you want"
                    size_hint_x: .40
                    pos_hint: {"center_x": .79, "center_y": .75}

                MDTextField:
                    id: img2img_negative_prompt
                    mode: "rectangle"
                    hint_text: "NEGATIVE PROMPT"
                    helper_text: "Describe what you wouldn't want"
                    size_hint_x: .40
                    pos_hint: {"center_x": .79, "center_y": .65}
                
                MDTextField:
                    id: img2img_path
                    mode: "rectangle"
                    hint_text: "PATH TO IMAGE"
                    helper_text: "Describe what you want with an image"
                    size_hint_x: .40
                    pos_hint: {"center_x": .79, "center_y": .55}

                MDLabel:
                    text: "STEPS"
                    halign: "center"
                    pos_hint: {"center_x": .67, "center_y": .45}

                MDSlider:
                    id: slider_steps_img2img
                    hint: True
                    min: 1
                    max: 60
                    value: 25
                    size_hint_x: .30
                    size_hint_y: .05
                    pos_hint: {"center_x": .84, "center_y": .45}
                
                MDLabel:
                    text: "CFG"
                    halign: "center"
                    pos_hint: {"center_x": .67, "center_y": .35}

                MDSlider:
                    id: slider_cfg_img2img
                    hint: True
                    min: 1
                    max: 30
                    value: 7
                    size_hint_x: .30
                    size_hint_y: .05
                    pos_hint: {"center_x": .84, "center_y": .35}
                
                MDLabel:
                    text: "DENOISE"
                    halign: "center"
                    pos_hint: {"center_x": .67, "center_y": .25}

                MDSlider:
                    id: slider_denoise_img2img
                    hint: True
                    min: 0.00
                    max: 1.00
                    value: 0.4
                    size_hint_x: .30
                    size_hint_y: .05
                    pos_hint: {"center_x": .84, "center_y": .25}
                
                MDLabel:
                    text: "AMOUNT"
                    halign: "center"
                    pos_hint: {"center_x": .67, "center_y": .15}

                MDSlider:
                    id: slider_amount_img2img
                    hint: True
                    min: 1
                    max: 12
                    value: 4
                    size_hint_x: .30
                    size_hint_y: .05
                    pos_hint: {"center_x": .84, "center_y": .15}

                MDRaisedButton:
                    id: img2img_generate
                    text: "GENERATE"
                    pos_hint: {"center_x": .5, "center_y": .05}
                    size_hint_x: .35
